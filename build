#!/bin/bash

clear
g++ -Wall -g -W -Werror -Wno-unused-parameter -Wno-unused-variable -Wno-missing-field-initializers \
    src/*.cpp \
    src/lexer/*.cpp \
    src/parser/*.cpp \
    src/typechecker/*.cpp \
    src/compiler/*.cpp \
    src/compiler/optimization/*.cpp \
    src/util/*.cpp \
    -o bin/output.exe && ./bin/output.exe $1 || echo boo

rm bin/*.o

